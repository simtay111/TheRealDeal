@using System.Collections
@using RecreateMe.Profiles
@using TheRealDeal.Models.Profile
@model ChooseProfileModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_accountLayout.cshtml";
}




<h2>Which Profile Would You Like To Use?</h2>
@using (Html.BeginForm())
{
    var profiles = (IList<Profile>) ViewData["Profile"];
    foreach (var prof in profiles)
    {
            <div id="ProfileOption">
                @Html.RadioButton("Profile", prof.UniqueId)
                @Html.Label(prof.Name.FullName)
            </div>
    }
    if (profiles.Count != 0)
    {
         <button type="submit">Use Selected</button>
    }
    if (profiles.Count < 3)
    {
        @Html.ActionLink("Create new profile", "CreateProfile", "Profile")
    }
}
